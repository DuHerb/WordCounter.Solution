<!-- index: list of target words in session, targetWord only.  click to show results -->
<h1>Target Words in This Session</h1>

@if (@Model.Count == 0)
{
  <h3>No Target Words have been added yet!</h3>
}

@foreach (var counter in Model)
{
  <h3><a href='/wordcounters/@counter.TargetWord'>@counter.TargetWord</a></h3>
}

